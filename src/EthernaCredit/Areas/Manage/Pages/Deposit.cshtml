@page
@model Etherna.CreditSystem.Areas.Manage.Pages.DepositModel
@{
    ViewData["Title"] = "Deposit";
    ViewData["ActivePage"] = ManageNavPages.Deposit;
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <p>How much do you want to load into your account? (Hint: it's free for now)</p>
        <form id="deposit" asp-area="Deposit" asp-page="DepositProcess" method="post" class="form-horizontal">
            <div>
                <p>
                    @foreach (var amount in new[] { 0.1m, 0.5m, 1m, 5m, 10m })
                    {
                        <button type="submit"
                                name="amount"
                                class="btn btn-primary"
                                value="@amount">@amount.ToFinancialString(prefixSymbol: "$")</button>
                    }
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}