@page
@model Etherna.CreditSystem.Areas.Deposit.Pages.DepositProcessModel
@{
    ViewData["Title"] = "Deposit confirm";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        @if (Model.SucceededResult)
        {
            <p>An amount of $@Model.DepositAmount has been deposited to your account</p>
        }
        else
        {
            <p>Sorry, we was not able to deposit an amount of $@Model.DepositAmount to your account</p>
        }
        <p><a asp-area="Manage" asp-page="index">Return to account</a></p>
    </div>
</div>