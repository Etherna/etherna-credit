@page
@model Etherna.CreditSystem.Areas.Admin.Pages.Users.AdminUpdateUserBalanceModel
@{
    ViewData["Title"] = "Update user balance";
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="Index">Users</a></li>
                <li class="breadcrumb-item"><a asp-page="User" asp-route-id="@Model.Id">@Model.Id</a></li>
                <li class="breadcrumb-item active" aria-current="page">Update balance</li>
            </ol>
        </nav>
    </div>

    <div class="col-12">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<div class="card mt-3">
    <div class="card-body">
        <div class="row">
            <div class="col-sm-10">
                
                <form asp-route-id="@Model.Id"
                      method="post">
                    <div class="mb-3 form-group row">
                        <label asp-for="@Model.Id" class="col-sm-3 col-form-label">User ID:</label>
                        <div class="col-sm-9">
                            <input asp-for="@Model.Id" type="text" disabled class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3 form-group row">
                        <label asp-for="@Model.CurrentBalance" class="col-sm-3 col-form-label">Current balance:</label>
                        <div class="col-sm-9">
                            <input asp-for="@Model.CurrentBalance" type="text" disabled class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3 form-group row">
                        <label class="col-sm-3 col-form-label" for="amount">Change amount:</label>
                        <div class="col-sm-9">
                            <input asp-for="Input.ChangeAmount" required class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3 form-group row">
                        <label class="col-sm-3 col-form-label" for="reason">Reason for update:</label>
                        <div class="col-sm-9">
                            <input asp-for="Input.Reason" type="text" required class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3 form-group row">
                        <div class="col-sm-9 offset-sm-3">
                            <button type="submit" class="btn btn-primary btn-lg">Update Balance</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
