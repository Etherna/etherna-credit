<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <RootNamespace>Etherna.CreditSystem.Services</RootNamespace>

    <Authors>Etherna Sagl</Authors>

    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <Nullable>enable</Nullable>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Etherna.DomainEvents.AspNetCore" Version="1.3.1" />
    <PackageReference Include="EthernaACR" Version="0.3.1" />
    <PackageReference Include="EthernaServicesClient.AspNetCore" Version="0.3.0-alpha.41" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Etherna" Version="0.3.0-alpha.7" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EthernaCredit.Domain\EthernaCredit.Domain.csproj" />
  </ItemGroup>

</Project>
